<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootCL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/introMobileLeftLeafIV"
            android:layout_width="57dp"
            android:layout_height="85dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/intro_mobile_left_leaf"
            app:layout_constraintBottom_toTopOf="@+id/heading1TV"
            app:layout_constraintStart_toStartOf="@+id/introMobileIV"
            app:layout_constraintTop_toTopOf="@+id/introMobileIV"
            app:layout_constraintVertical_bias="0.798" />

        <ImageView
            android:id="@+id/introMobileLeftRightIV"
            android:layout_width="90dp"
            android:layout_height="124dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/intro_mobile_right_leaf"
            app:layout_constraintBottom_toTopOf="@+id/heading1TV"
            app:layout_constraintEnd_toEndOf="@+id/introMobileIV"
            app:layout_constraintTop_toTopOf="@+id/introMobileIV"
            app:layout_constraintVertical_bias="0.73" />


        <ImageView
            android:id="@+id/introMobileIV"
            android:layout_width="256dp"
            android:layout_height="247dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/intro_mobile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/introUserIV"
            android:layout_width="97dp"
            android:layout_height="163dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/intro_user"
            app:layout_constraintBottom_toTopOf="@+id/heading1TV"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/introMobileIV"
            app:layout_constraintVertical_bias="0.84" />


        <ImageView
            android:id="@+id/mobileContentLearnAndPracticeIV"
            android:layout_width="94dp"
            android:layout_height="179dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="88dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/intro_mobile_learn_practice"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.475"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/heading1TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="Learn and Practice"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/introMobileIV" />


        <TextView
            android:id="@+id/desc1TV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="50dp"
            android:text="All of Testbook and more in the palm of your hands! Practice thousands of questions for free while having fun!."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/heading1TV" />

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>